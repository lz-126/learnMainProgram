<!--pages/text/text.wxml-->
<!-- 1.text组件基本使用 -->
<text>Hello World \n</text>
<text>你好小程序 \n</text>

<!-- 2.selecttable :true -->
<!-- 默认情况下text中的文本长按是不能被选中的 -->
<text selectable="{{true}}">Hello selecttable01 \n</text>
<text selectable>Hello selecttable02 \n</text>

<!-- 3.space 决定文本空格的大小 -->
<!-- emsp:一个中文字符的大小 -->
<!-- ensp:半个中文的大小 -->
<text>space none\n</text>
<text space="nbsp">space nbsp\n</text>
<text space="ensp">space ensp\n</text>
<text space="emsp">space emsp\n</text>

<!-- 4.decode属性:是否解码文本 -->
<text decode>5 &gt; 3</text>